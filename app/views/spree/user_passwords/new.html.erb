<% @body_id = 'password' %>
<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div id="forgot-password" class="panel panel-default">
      <div class="panel-heading"><%= I18n.t('spree.forgot_password') %></div>

        <div class="panel-body">
      <h6 class="text-center"><%= I18n.t('spree.instructions_to_reset_password') %></h6>
          <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
            <div class="form-group">

              <%= f.label :email, I18n.t('spree.email') %><br />
              <%= f.email_field :email, class: 'form-control' %><br />

            <div class="action">
              <%= f.submit I18n.t('spree.reset_password'), class: 'btn btn-success btn-block' %>
            </div>
          <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
